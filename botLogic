
public class BotLogic {
	//Creating HiBye class object
	HiBye hb = new HiBye();
			
	//Creating Gifts class object
	Gifts g = new Gifts();
	
	public String dialogue(String user)
	{
		//Pre-programmed responses based on String methods such as .contains() and .startswith().
			if (user.startsWith("hey") || user.startsWith("hello") || user.startsWith("hi") || user.startsWith("who") || user.startsWith("hola")) {
				return("Hello there. I’m your friendly assistant Love Bot and I give dating advice. How can I help you today?");
			} else if (user.contains("crush") || user.contains("approach") || user.contains("talk") || user.contains("want") || user.contains("feeling") || user.contains("scar") || user.contains("afraid") || user.contains("too good") || user.contains("league")) {
				return("Don’t be afraid to approach them! The worst is rejection and you move on with life." + "\n" + "Anything else?");
			} else if (user.contains("cheat") || user.contains("broke up") || user.contains("heartbroken") || user.contains("hurt") || user.contains("left") || user.contains("leav") || user.contains("abus") || user.contains("toxic") || user.contains("ignor") || user.contains("mad") || user.contains("angr") || user.contains("break")) {
				return("Leave them behind! Nobody deserves to be treated like that." + "\n" + "Anything else?");
			} else if (user.contains("better") || user.contains("improv") || user.contains("strengthen") || user.contains("bond") || user.contains("close") || user.contains("make up") || user.contains("distan") || user.contains("apart")) {
				return("Communication is key." + "\n" +"Anything else?");
			} else if (user.contains("ex")) {	
				return("Stop talking to them. There’s a reason why you aren’t together anymore." + "\n" + "Anything else?");
			} else if (user.contains("likes me") || user.contains("like me")) {
				return("They will most likely talk a lot or make lots of eye contact");
			} else if (user.contains("first") || user.contains("date") || user.contains("where") || user.contains("out") || user.contains("eat") || user.contains("food") || user.contains("place") || user.contains("special")) {
				return("Movies, Golf, Chipotle, Mall, Park, Walmart. Your choice." + "\n" + "Anything else?");
			} else if (user.contains("gift") || user.contains("present")) {
				g.whatMonth();
			} else if (user.contains("ok") || user.contains("okay") || user.contains("thank you") || user.contains("thanks") || user.contains("oh") || user.contains("thx")) {
				return("No problem!" + "\n" + "Anything else?");
			} else if (user.contains("no") || user.contains("nah") || user.contains("naw") || user.contains("nope")) {
				return("Okay. Say \"end chat\" to close this chat");
			} else if (user.contains("end chat") || user.contains("endchat")) {
				/** End chat method*/
				hb.endChat(); 
			} else if (user.contains("advice")) {
				return("I'd be happy to help. What do you need advice for? (Please type 'end chat' to close the client.)");	
			} else if (user.contains("need") && user.contains("help")) {
				return("I'm here to help. What do you need advice for? (Please type 'end chat' to close the client.)");
			} else if (user.contains("lonely")) {
				return("Attend every party or event you can. Go anywhere where you can meet and interact with likeminded people. Why not try volunteering?");
			} else if (user.contains("meet") && user.contains("people")) {
				return("Attend every party or event you can. Go anywhere where you can meet and interact with likeminded people. Why not try volunteering?");
			} else if (user.contains("need") && user.contains("girlfriend")) {
				return("Meeting people is a good first step.");
			} else if (user.contains("need") && user.contains("boyfriend")) {
				return("Meeting people is a good first step.");
			} else if (user.contains("who") && user.contains("you")) {
				return("I'm the LoveBot. I give relationship advice. Nice to meet you. :)");
			} else if (user.contains("what") && user.contains("you")) {
				return("I'm a chatbot named LoveBot. I give relationship advice. Nice to meet you. :)");
			
				
	}
			return ("Sorry, didn't get that. Please try again, or type 'End chat' to exit.");
}
}
